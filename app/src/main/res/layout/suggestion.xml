<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    >
    <!--舒适度-->
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="舒适度"
    android:textSize="16dp"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="10dp"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@mipmap/comfort"
            />

    <TextView
        android:id="@+id/comfort_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/LightGray"
        />
    <!--洗车指数-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="洗车建议"
        android:textSize="16dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@mipmap/car"
            />

    <TextView
        android:id="@+id/car_wash_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/LightGray"
        />

    <!--运动建议-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="运动建议"
        android:textSize="16dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@mipmap/sport"
            />

    <TextView
        android:id="@+id/sport_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/LightGray"
        />

    <!--空气情况-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="空气情况"
        android:textSize="16dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@mipmap/quality"
            />

    <TextView
        android:id="@+id/air_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/LightGray"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="穿着建议"
        android:textSize="16dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@mipmap/dressed"
            />

    <TextView
        android:id="@+id/clothing_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/LightGray"
        />
    <!--旅行-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="旅行建议"
        android:textSize="16dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@mipmap/travel"
            />

    <TextView
        android:id="@+id/travel_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        />
    </LinearLayout>
</LinearLayout>